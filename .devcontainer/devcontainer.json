{
  "name": "wordle-dev",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "fwcd.kotlin",
        "vscjava.vscode-gradle",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "./gradlew ktlintFormat",
  "forwardPorts": [8080],
  "remoteEnv": { "SPRING_PROFILES_ACTIVE": "dev" }
}
