{
  "name": "Wordle Backend Dev",

  // compose 파일을 배열로 지정 (버전 호환 ↑)
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],

  // dev-container로 사용할 서비스
  "service": "backend",

  // compose에서 마운트한 경로와 동일하게
  "workspaceFolder": "/workspace",

  // 컨테이너 최초 생성 후 한 번 실행
  "postCreateCommand": "./gradlew build --quiet",

  // ↙︎ 확장 자동 설치 (원하면 수정)
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-gradle",
        "ms-azuretools.vscode-docker"
      ]
    }
  }

  
  ,"runServices": ["db","backend"],      // devcontainer 실행 시 필요한 서비스만
  "overrideCommand": false               // backend Dockerfile CMD 그대로 사용
  
}
